{
  "name": "enova-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "build:all": "npm run build api-gateway && npm run build auth-service && npm run build chat-service && npm run build community-service",
    "start:dev": "nest start --watch",
    "start:gateway": "nest start api-gateway --watch",
    "start:auth": "nest start auth-service --watch",
    "start:chat": "nest start chat-service --watch",
    "start:community": "nest start community-service --watch",
    "start:all": "concurrently \"npm run start:gateway\" \"npm run start:auth\" \"npm run start:chat\" \"npm run start:community\"",
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/microservices": "^10.4.15",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/platform-socket.io": "^10.4.15",
    "@nestjs/throttler": "^6.3.0",
    "@nestjs/websockets": "^10.4.15",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.41.0",
    "@opentelemetry/core": "^1.20.0",
    "@opentelemetry/exporter-metrics-otlp-grpc": "^0.47.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.47.0",
    "@opentelemetry/resources": "^1.20.0",
    "@opentelemetry/sdk-metrics": "^1.20.0",
    "@opentelemetry/sdk-node": "^0.47.0",
    "@opentelemetry/sdk-trace-node": "^1.20.0",
    "@opentelemetry/semantic-conventions": "^1.20.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@supabase/supabase-js": "^2.50.0",
    "@willsoto/nestjs-prometheus": "^6.0.1",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "express": "^4.18.2",
    "ioredis": "^5.4.1",
    "jose": "^5.2.0",
    "opossum": "^8.1.4",
    "prom-client": "^15.1.0",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.3",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@types/amqplib": "^0.10.5",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.6",
    "@types/opossum": "^8.1.9",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.53.1"
  }
}
